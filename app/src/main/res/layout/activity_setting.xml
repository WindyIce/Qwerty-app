<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.windyice.qwerty.SettingActivity">

    <TextView
        android:id="@+id/setting_activity_textview1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="IP:"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/setting_activity_edittext1"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="23.97.65.241"
        app:layout_constraintTop_toBottomOf="@+id/setting_activity_textview1"/>
    <Button
        android:id="@+id/setting_activity_button1"
        android:text="@string/confirm"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/setting_activity_textview1"
        app:layout_constraintLeft_toRightOf="@+id/setting_activity_edittext1"/>
    <TextView
        android:id="@+id/setting_activity_textview2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Port:"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_activity_edittext1"/>
    <EditText
        android:id="@+id/setting_activity_edittext2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="3389"
        app:layout_constraintTop_toBottomOf="@+id/setting_activity_textview2"/>
    <Button
        android:id="@+id/setting_activity_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/setting_activity_edittext2"
        app:layout_constraintTop_toBottomOf="@id/setting_activity_textview2"
        />
    <TextView
        android:id="@+id/setting_activity_textview3"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:text="Test Mode On?"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/setting_activity_button2"/>
    <CheckBox
        android:id="@+id/setting_activity_checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_activity_button2"
        app:layout_constraintLeft_toRightOf="@id/setting_activity_textview3"
        />

</android.support.constraint.ConstraintLayout>
